$(function(){
  $("#save-button").on("click", function () {
    // 生成する文字列の長さ
    var l = 8;
    // 生成する文字列に含める文字セット
    var c = "abcdefghijklmnopqrstuvwxyz0123456789";
    var cl = c.length;
    var r = "";
    for(var i=0; i<l; i++){
      r += c[Math.floor(Math.random()*cl)];
    }
    html2canvas($('#target').get(0)).then( function (canvas) {
      var imgData = canvas.toDataURL();

      // 処理前に Loading 画像を表示
      dispLoading('BigTweet準備中...画像を作ってるよ！');

      $.ajax({
        url: '/make',
        type: 'POST',
        dataType: 'json',
        async: true,
        data: {imgData: imgData, r: r},
      }).done(function(data){
        removeLoading();
        swal({
          type: 'success',
          // title: 'Let\'s BigTweet!',
          text: '画像完成！\n↓Let\'s BigTweet!↓',
          imageUrl: `https://s3-ap-northeast-1.amazonaws.com/bigtweet2-production/images/${r}.png`,
          imageWidth: 315,
          imageAlt: 'Custom image',
          showConfirmButton: false,
          showCloseButton: true,
          footer: `<a href=https://twitter.com/share?text=%23BigTweet&url=https://bigtweet2.herokuapp.com/posts/${r} class=share_btn2>Twitterシェア</a>`,
        })
      });
    });
  });
});

