    <label><%= form.radio_button :kind, "black" %><%= image_tag 'black-min.jpg', width: '90' %></label>
    <label><%= form.radio_button :kind, "white" %><%= image_tag 'white-min.jpg', width: '90' %></label>
  </div>
  <div>
    <input type="file" id="myfile">
  </div>

  <br>

  <div class="form-group container">
    <p><b><i class="fa fa-pencil"></i> 画像内の文字を入力しよう <i class="fa fa-pencil"></i></b><br>
    <%= form.text_area :input, id: 'input', class:'form-control', rows:"3" %>
  </div>

  <p><b><i class="fa fa-angle-double-right"></i> プレビュー <i class="fa fa-angle-double-left"></i></b><br>
  <div id="screenshot-target">
    <img id="preview-image" width="315">
    <p id="preview-font"></p>
  </div>
  <br>
<% end %>

