    <label><%= form.radio_button :kind, "sleep" %><%= image_tag 'sleep-min.jpg', width: '90' %></label>
    <label><%= form.radio_button :kind, "speech" %><%= image_tag 'speech-min.jpg', width: '90' %></label>
    <label><%= form.radio_button :kind, "thinking" %><%= image_tag 'thinking-min.jpg', width: '90' %></label>
    <label><%= form.radio_button :kind, "hukidashi" %><%= image_tag 'hukidashi-min.png', width: '90' %></label>
    <label><%= form.radio_button :kind, "donguri" %><%= image_tag 'donguri-min.jpg', width: '90' %></label>
    <label><%= form.radio_button :kind, "cat-bikkuri" %><%= image_tag 'cat-bikkuri-min.jpg', width: '90' %></label>
    <label><%= form.radio_button :kind, "muzui" %><%= image_tag 'muzui-min.jpg', width: '90' %></label>
    <label><%= form.radio_button :kind, "bikkuri" %><%= image_tag 'bikkuri-min.jpg', width: '90' %></label>
    <label><%= form.radio_button :kind, "owata" %><%= image_tag 'owata-min.jpg', width: '90' %></label>
